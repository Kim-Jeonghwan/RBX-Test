#ifndef DEVTIMER_H
#define DEVTIMER_H

/* ************************** [[   include  ]]  *********************************************************** */
#include "main.h"

/* ************************** [[   define   ]]  *********************************************************** */


/* ************************** [[   struct   ]]  *********************************************************** */
typedef struct
{
	Uint16 Cycle_1ms;
	Uint16 Cycle_10ms;
	Uint16 Cycle_100ms;
	Uint16 Cycle_1000ms;

	Uint16 Hzcnt;
	Uint16 Hz;
} stTimer;


/* ************************** [[   global   ]]  *********************************************************** */
extern stTimer xTimer;


/* ************************** [[  function  ]]  *********************************************************** */
// DSP 타이머 초기화 
void Initial_TIMER(void);

static void initCPUTimers(void);

static void configCPUTimer(Uint32 cpuTimer, float freq, float period);

__interrupt void isr_CpuTimer0(void);

__interrupt void isr_CpuTimer1(void);

__interrupt void isr_CpuTimer2(void);

#endif	// #ifndef DEVTIMER_H



