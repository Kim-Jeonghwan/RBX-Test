#ifndef CSU_LED_H
#define CSU_LED_H

/* ************************** [[   include  ]]  *********************************************************** */
#include "main.h"

/* ************************** [[   define   ]]  *********************************************************** */


/* ************************** [[   struct   ]]  *********************************************************** */
typedef enum
{
	eLED_1 = 32u,
	eLED_2 = 33u,
	eLED_3 = 34u,
	eLED_4 = 35u,
	eLED_5 = 36u,
	eLED_6 = 37u
}eLed;

typedef struct
{
    Uint16 Green;       // GPIO index
    Uint16 Red;         // GPIO index
    Uint16 Status:1u;   // 0: Off, 1: On
    Uint16 Color:1u;    // 0: Green, 1: Red
    Uint16 Toggle:1u;   // 0: None, 1: Toggle
    Uint16 Reserved:13u;    //
} stLed;

typedef struct
{
	stLed	POWER;
}stLedStatus;



/* ************************** [[   global   ]]  *********************************************************** */
stLedStatus xLed;


/* ************************** [[  function  ]]  *********************************************************** */
void initLedRegister(void);

void SetLedState(stLed *pLed, Uint16 Color, Uint16 State);

void SetLedColor(Uint16 Index, Uint16 State);

#endif	// #ifndef CSU_LED_H

